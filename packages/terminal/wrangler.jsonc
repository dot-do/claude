{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "terminal",
  "main": "src/worker/index.ts",
  "compatibility_date": "2025-01-01",
  "compatibility_flags": ["nodejs_compat"],

  // Example routes - customize for your domain
  // "routes": [
  //   { "pattern": "terminal.cod.ng/*", "zone_name": "cod.ng" }
  // ],

  "observability": {
    "enabled": true
  },

  "dev": {
    "port": 8788
  },

  "assets": {
    "directory": "./dist/client",
    "binding": "ASSETS",
    "not_found_handling": "single-page-application",
    "run_worker_first": true
  }

  // Optional: Connect to a Sandbox Durable Object
  // "durable_objects": {
  //   "bindings": [
  //     {
  //       "name": "Sandbox",
  //       "class_name": "Sandbox"
  //     }
  //   ]
  // }

  // Optional: Use external PTY server
  // [vars]
  // PTY_URL_TEMPLATE = "wss://pty.example.com/ws/{sessionId}"
}
