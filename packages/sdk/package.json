{
  "name": "@dotdo/claude",
  "version": "0.0.1",
  "description": "SDK for Claude Code web experience - typed client and Cloudflare sandbox helpers",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js",
      "require": "./dist/client/index.cjs"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js",
      "require": "./dist/server/index.cjs"
    },
    "./rpc": {
      "types": "./dist/rpc/index.d.ts",
      "import": "./dist/rpc/index.js",
      "require": "./dist/rpc/index.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "capnweb": "^0.1.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251221.0",
    "@types/node": "^22.0.0",
    "glob": "^13.0.0",
    "gray-matter": "^4.0.3",
    "tsup": "^8.3.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "zod": "^4.3.5"
  },
  "peerDependencies": {
    "@cloudflare/sandbox": ">=0.6.0"
  },
  "peerDependenciesMeta": {
    "@cloudflare/sandbox": {
      "optional": true
    }
  },
  "keywords": [
    "claude",
    "claude-code",
    "anthropic",
    "cloudflare",
    "sandbox",
    "sdk",
    "rpc",
    "capnweb"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dot-do/claude.git",
    "directory": "packages/sdk"
  }
}
